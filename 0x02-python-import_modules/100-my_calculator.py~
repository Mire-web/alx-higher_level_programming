#!/usr/bin/python3
if __name__ == "__main__":
    from calculator_1 import add, sub, mul, div
    import sys
    argv = sys.argv
    if len(argv != 3):
        print('Usage: ./100-my_calculator.py <a> <operator> <b>')
        sys.exit(1)
    if argv[2] == '+':
        print('{:d} + {:d} = {:d}'.format(argv[1], argv[3], add(int(argv[1], int(argv[2])))))
    elif argv[2] == '-':
        print('{:d} - {:d} = {:d}'.format(argv[1], argv[3], sub(int(argv[1], int(argv[2])))))
    elif argv[2] == '*':
        print('{:d} * {:d} = {:d}'.format(argv[1], argv[3], mul(int(argv[1], int(argv[2])))))
    elif argv[2] == '/':
        print('{:d} / {:d} = {:d}'.format(argv[1], argv[3], div(int(argv[1], int(argv[2])))))
    else:
        print('Unknown operator. Available operators: +, -, * and /')
        sys.exit(1)
